<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Women's Dresses</title>
  <style>
    * {
      margin: 0; padding: 0; box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background-color: #f3f0ff; /* lavender background */
      color: #333;
      min-height: 100vh;
    }

    header {
      background-color: #cdb4db; /* lavender purple */
      padding: 20px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      position: sticky;
      top: 0;
      z-index: 10;
    }

    header h1 {
      color: #4c0070;
      font-size: 26px;
      letter-spacing: 1px;
      user-select: none;
    }

    .nav-buttons button {
      background-color: white;
      color: #4c0070;
      border: 2px solid #4c0070;
      padding: 10px 16px;
      border-radius: 12px;
      cursor: pointer;
      margin-left: 12px;
      font-weight: 600;
      transition: all 0.3s ease;
      user-select: none;
    }

    .nav-buttons button:hover {
      background-color: #e0bbf4;
      color: #32004b;
      border-color: #32004b;
    }

    .products {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 30px;
      padding: 50px 30px 80px;
      max-width: 1200px;
      margin: auto;
    }

    .product-card {
      background-color: white;
      border-radius: 16px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .product-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 35px rgba(76, 0, 112, 0.25);
    }

    .product-card img {
      width: 100%;
      height: 260px;
      object-fit: cover;
      border-radius: 12px;
      margin-bottom: 15px;
      user-select: none;
    }

    .product-card h3 {
      font-size: 22px;
      color: #4c0070;
      margin-bottom: 6px;
      user-select: text;
    }

    .product-card p {
      margin: 6px 0;
      user-select: text;
    }

    .price {
      font-weight: 700;
      color: #6a0572;
      font-size: 18px;
      margin-bottom: 12px;
    }

    .product-card input[type="number"] {
      width: 70px;
      padding: 8px 10px;
      border-radius: 8px;
      border: 1.8px solid #ccc;
      margin-right: 10px;
      font-size: 16px;
    }

    .product-card input[type="number"]:focus {
      outline: none;
      border-color: #6a0572;
    }

    button {
      background-color: #6a0572;
      color: white;
      border: none;
      padding: 11px 20px;
      border-radius: 12px;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.3s ease;
      user-select: none;
    }

    button:hover {
      background-color: #4c0070;
    }

    .banner {
      position: relative;
      width: 100%;
      overflow: hidden;
      margin-bottom: 40px;
    }

    .banner img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      display: block;
      border-radius: 0 0 20px 20px;
      filter: brightness(0.85);
    }

    .banner-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      text-align: center;
      text-shadow: 2px 2px 6px rgba(0,0,0,0.7);
      max-width: 700px;
      padding: 0 20px;
    }

    .banner-text h2 {
      font-size: 36px;
      margin-bottom: 10px;
      font-weight: 700;
      letter-spacing: 1.2px;
    }

    .banner-text p {
      font-size: 18px;
      line-height: 1.5;
    }

    /* Modal */
    #buyNowModal {
      display: none;
      position: fixed;
      z-index: 9999;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background-color: rgba(0, 0, 0, 0.45);
      justify-content: center;
      align-items: center;
      padding: 15px;
    }

    #buyNowModal .modal-content {
      background: #f9f5ff;
      padding: 30px;
      border-radius: 24px;
      max-width: 480px;
      width: 100%;
      position: relative;
      box-shadow: 0 12px 30px rgba(0,0,0,0.18);
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    #buyNowModal .close {
      position: absolute;
      top: 15px;
      right: 20px;
      font-size: 28px;
      cursor: pointer;
      color: #666;
    }

    #buyNowModal img {
      width: 100%;
      border-radius: 14px;
      margin-bottom: 20px;
      user-select: none;
      pointer-events: none;
    }

    #buyNowModal input,
    #buyNowModal textarea {
      width: 100%;
      padding: 12px 14px;
      margin-top: 12px;
      font-size: 17px;
      border-radius: 12px;
      border: 1.8px solid #ccc;
      font-family: inherit;
    }

    #buyNowModal input:focus,
    #buyNowModal textarea:focus {
      outline: none;
      border-color: #af38b7;
    }

    #buyNowModal button {
      width: 100%;
      margin-top: 20px;
      background-color: #6a0572;
      padding: 14px;
      font-size: 18px;
      border-radius: 14px;
      font-weight: 700;
    }

    #buyNowModal button:hover {
      background-color: #4c0070;
    }

    .modal-title {
      font-size: 24px;
      color: #4c0070;
      margin-bottom: 15px;
      font-weight: 700;
    }

    .modal-price {
      font-weight: 700;
      color: #6a0572;
      margin-bottom: 20px;
      font-size: 20px;
    }
    
  </style>
</head>
<body>

  <header>
    <h1>Women's Dress Collection</h1>
    <div class="nav-buttons">
        <button onclick="location.href='/user/logout'">Logout</button>
      <button onclick="location.href='/user/cart'">My Cart</button>
      <button onclick="location.href='/user/order'">My Orders</button>
    </div>
  </header>

  <div class="banner">
    <img src="https://images.unsplash.com/photo-1521334884684-d80222895322?auto=format&fit=crop&w=1200&q=80" alt="Women's Fashion Banner" />
    <div class="banner-text">
      <h2>Discover Your Perfect Style</h2>
      <p>Explore our elegant lavender-themed collection of dresses for every occasion.</p>
    </div>
  </div>

  <main class="products">
    <% dresses.forEach(function(dress) { %>
      <div class="product-card">
        <img src="<%= dress.image %>" alt="<%= dress.name %>" loading="lazy" />
        <h3><%= dress.name %></h3>
        <p>Brand: <%= dress.brand %></p>
        <p class="price">₹<%= dress.price %></p>

        <form action="/add-to-cart/<%= dress._id %>" method="POST" onsubmit="return validateQuantity(this)">
          <input type="number" name="quantity" min="1" value="1" required />
          <button type="submit">Add to Cart</button>
        </form>
        <br>
        <button type="button" onclick="openModal('<%= dress._id %>', '<%= dress.name %>', '<%= dress.image %>', '<%= dress.price %>')">Buy Now</button>
      </div>
    <% }) %>
  </main>

  <div id="buyNowModal">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>
      <img id="modalImage" src="" alt="Dress Image">
      <div class="modal-title" id="modalTitle"></div>
      <div class="modal-price" id="modalPrice"></div>
      <form onsubmit="return confirmPurchase()">
        <input type="text" name="name" placeholder="Your Name" required />
        <input type="email" name="email" placeholder="Your Email" required />
        <textarea name="address" placeholder="Delivery Address" rows="4" required></textarea>
        <button type="submit">Confirm Purchase</button>
      </form>
    </div>
  </div>

  <script>
    function openModal(id, name, image, price) {
      document.getElementById('modalImage').src = image;
      document.getElementById('modalTitle').textContent = name;
      document.getElementById('modalPrice').textContent = 'Price: ₹' + price;
      document.getElementById('buyNowModal').style.display = 'flex';
    }

    function closeModal() {
      document.getElementById('buyNowModal').style.display = 'none';
    }

    function confirmPurchase() {
      alert("Thank you for your purchase! Your order has been placed successfully.");
      closeModal();
      return false; // Prevent actual form submission for now
    }

    function validateQuantity(form) {
      const quantity = form.quantity.value;
      if (quantity < 1) {
        alert("Please enter a valid quantity.");
        return false;
      }
      return true;
    }
  </script>
</body>
</html>
