<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Orders</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f2f4f8;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #333;
      margin-bottom: 30px;
    }

    .orders-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
      padding: 0 20px;
    }

    .order-card {
      background-color: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
      padding: 16px;
      text-align: center;
      transition: transform 0.3s ease;
    }

    .order-card:hover {
      transform: translateY(-5px);
    }

    .order-image {
      width: 100%;
      height: 180px;
      object-fit: contain;
      border-radius: 8px;
      background-color: #f0f0f0;
      margin-bottom: 12px;
    }

    .order-details h3 {
      font-size: 18px;
      color: #007bff;
      margin-bottom: 8px;
    }

    .order-details p {
      font-size: 15px;
      color: #555;
    }

    .no-orders-msg, .error-msg {
      text-align: center;
      font-size: 16px;
      color: #888;
      margin-top: 50px;
    }
  </style>
</head>
<body>
  <h1>Your Orders</h1>

  <% if (orders && orders.length > 0) { %>
    <div class="orders-container">
      <% [...orders].reverse().forEach(order => { %>
        <div class="order-card">
          <% if (order.productId) { %>
            <img src="<%= order.productId.image %>" alt="<%= order.productId.name %>" class="order-image">
            <div class="order-details">
              <h3><%= order.productId.name %></h3>
              <p>Quantity: <%= order.quantity %></p>
            </div>
          <% } else { %>
            <p class="error-msg">Product details not available.</p>
          <% } %>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="no-orders-msg">No orders found.</p>
  <% } %>
</body>
</html>
