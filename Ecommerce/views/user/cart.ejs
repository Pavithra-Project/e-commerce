<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Your Cart</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      background: #f9fcff;
      color: #1a3d7c;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    header {
      background-color: #d7e9ff;
      padding: 25px 40px;
      text-align: center;
      width: 100%;
      box-shadow: 0 4px 8px rgba(26, 61, 124, 0.2);
      position: sticky;
      top: 0;
      z-index: 10;
      color: #1a3d7c;
      font-weight: 600;
      font-size: 1.8rem;
      letter-spacing: 1.2px;
    }

    .cart-container {
      background: #ffffff;
      max-width: 900px;
      margin: 40px auto;
      padding: 30px 35px;
      border-radius: 16px;
      box-shadow: 0 8px 25px rgba(26, 61, 124, 0.15);
      width: 95%;
      color: #1a3d7c;
      position: relative;
      z-index: 1;
    }

    .cart-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 25px;
      border-bottom: 1px solid #d3e3fc;
      padding-bottom: 18px;
      border-radius: 12px;
      transition: background-color 0.3s ease;
    }

    .cart-item:hover {
      background-color: #e6f0ff;
    }

    .cart-item img {
      width: 130px;
      border-radius: 12px;
      object-fit: cover;
      height: 90px;
      box-shadow: 0 4px 8px rgba(26, 61, 124, 0.1);
    }

    .item-details {
      flex: 1;
      margin-left: 25px;
      color: #1a3d7c;
    }

    .item-details h3 {
      margin-bottom: 8px;
      font-weight: 700;
      font-size: 1.2rem;
      letter-spacing: 0.05rem;
      color: #1a3d7c;
    }

    .item-details p {
      margin: 3px 0;
      font-weight: 500;
      font-size: 1rem;
      color: #4a6fa5;
    }

    .actions {
      text-align: right;
      margin-top: 35px;
    }

    .actions a {
      text-decoration: none;
      background-color: #4a90e2;
      color: white;
      padding: 12px 24px;
      border-radius: 12px;
      font-weight: 600;
      box-shadow: 0 4px 14px rgba(74,144,226,0.6);
      transition: background-color 0.3s ease;
    }

    .actions a:hover {
      background-color: #357abd;
      box-shadow: 0 6px 20px rgba(53,122,189,0.8);
    }

    .total {
      text-align: right;
      font-weight: 700;
      font-size: 1.6rem;
      color: #4a90e2;
      margin-top: 15px;
      letter-spacing: 0.05rem;
    }

    .btn-remove,
    .btn-order {
      border: none;
      padding: 10px 18px;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.3s ease;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      user-select: none;
    }

    .btn-remove {
      background-color: #e94e4e;
      color: #fff;
      margin-left: 12px;
    }

    .btn-remove:hover {
      background-color: #c23b3b;
      box-shadow: 0 6px 18px rgba(194,59,59,0.8);
    }

    .btn-order {
      background-color: #4a90e2;
      color: #fff;
      margin-left: 12px;
    }

    .btn-order:hover {
      background-color: #357abd;
      box-shadow: 0 6px 18px rgba(53,122,189,0.8);
    }

    .empty-message {
      text-align: center;
      padding: 50px 20px;
      font-size: 1.4rem;
      color: #7a9fd9;
    }

    /* Modal */
    #buyNowModal {
      display: none;
      position: fixed;
      z-index: 999;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.3);
      justify-content: center;
      align-items: center;
    }

    .modal-content {
      background: #fff;
      padding: 30px 35px;
      border-radius: 20px;
      max-width: 520px;
      width: 90%;
      color: #1a3d7c;
      box-shadow: 0 8px 30px rgba(26, 61, 124, 0.15);
      position: relative;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .modal-content img {
      width: 100%;
      max-height: 220px;
      object-fit: contain;
      border-radius: 14px;
      margin-bottom: 20px;
      box-shadow: 0 6px 20px rgba(26, 61, 124, 0.2);
    }

    .modal-content input,
    .modal-content textarea {
      width: 100%;
      padding: 12px 14px;
      margin-top: 12px;
      border-radius: 10px;
      border: 1px solid #4a90e2;
      outline: none;
      font-size: 1rem;
      color: #1a3d7c;
      font-weight: 600;
      transition: box-shadow 0.3s ease;
    }

    .modal-content input:focus,
    .modal-content textarea:focus {
      box-shadow: 0 0 8px 2px #4a90e2;
      border-color: #4a90e2;
    }

    .modal-content textarea {
      resize: vertical;
      min-height: 70px;
    }

    .modal-content .close {
      position: absolute;
      top: 12px;
      right: 20px;
      font-size: 28px;
      cursor: pointer;
      color: #4a90e2;
      font-weight: 700;
    }

    .modal-title {
      font-size: 24px;
      margin-bottom: 15px;
      font-weight: 700;
      color: #357abd;
      letter-spacing: 0.05rem;
    }

    /* Scrollbar styling */
    ::-webkit-scrollbar {
      width: 8px;
    }
    ::-webkit-scrollbar-track {
      background: #f0f6ff;
      border-radius: 8px;
    }
    ::-webkit-scrollbar-thumb {
      background: #4a90e2;
      border-radius: 8px;
    }
  </style>
</head>
<body>

<header>
  Your Shopping Cart
</header>

<div class="cart-container" id="cartContainer">
  <% if (cart.length === 0) { %>
    <div class="empty-message">üõí Your cart is empty.</div>
  <% } else { 
    let total = 0;
  %>
    <% cart.forEach(function(item) { 
      let itemTotal = item.quantity * item.price;
      total += itemTotal;
    %>
      <div class="cart-item" data-id="<%= item._id %>">
        <img src="<%= item.image %>" alt="<%= item.name %>"/>
        <div class="item-details">
          <h3><%= item.name %></h3>
          <p>Price: ‚Çπ<%= item.price %></p>
          <p>Quantity: <%= item.quantity %></p>
          <p>Total: ‚Çπ<%= itemTotal %></p>
        </div>
        <div>
          <button class="btn-remove" data-id="<%= item._id %>">Remove</button>
          <button class="btn-order" 
            onclick="openModal('<%= item._id %>', '<%- item.name.replace(/'/g, '&#39;') %>', '<%= item.image %>', <%= item.price %>)">
            Order
          </button>
        </div>
      </div>
    <% }); %>

    <div class="total" id="grandTotal">Grand Total: ‚Çπ<%= total %></div>

    <div class="actions">
      <a href="/">‚Üê Continue Shopping</a>
    </div>
  <% } %>
</div>


<div id="buyNowModal">
  <div class="modal-content">
    <span class="close" onclick="closeModal()">&times;</span>
    <h2 class="modal-title">Order Details</h2>
    <img id="modalProductImage" src="" alt="Product Image" />
    <p><strong id="modalProductName"></strong></p>
    <p>Price per item: ‚Çπ<span id="modalProductPrice"></span></p>
    <form id="orderForm" onsubmit="submitOrder(event)">
      <input type="hidden" id="modalProductId" />
      <label for="customerName">Name:</label>
      <input type="text" id="customerName" required placeholder="Your Name" />
      <label for="customerContact">Contact Number:</label>
      <input type="tel" id="customerContact" required placeholder="10-digit number" pattern="[0-9]{10}" />
      <label for="customerAddress">Address:</label>
      <textarea id="customerAddress" required placeholder="Your Address"></textarea>
      <label for="orderQuantity">Quantity:</label>
      <input type="number" id="orderQuantity" min="1" value="1" required />
      <p style="margin-top: 12px;">Total Price: ‚Çπ<span id="modalTotalPrice"></span></p>
      <button type="submit" class="btn-order" style="width: 100%;">Place Order</button>
    </form>
  </div> 
</div> 

<script>
 
</script>

<script>
  
  function openModal(id, name, image, price) {
    document.getElementById('buyNowModal').style.display = 'flex';
    document.getElementById('modalProductId').value = id;
    document.getElementById('modalProductName').textContent = name;
    document.getElementById('modalProductImage').src = image;
    document.getElementById('modalProductImage').alt = name;
    document.getElementById('modalProductPrice').textContent = price;
    document.getElementById('orderQuantity').value = 1;
    document.getElementById('modalTotalPrice').textContent = price;

    // Update total price when quantity changes
    const quantityInput = document.getElementById('orderQuantity');
    quantityInput.oninput = () => {
      const qty = parseInt(quantityInput.value) || 1;
      document.getElementById('modalTotalPrice').textContent = (qty * price).toFixed(2);
    };
  }

  // Close modal
  function closeModal() {
    document.getElementById('buyNowModal').style.display = 'none';
  }

  // Handle order form submission
  function submitOrder(event) {
    event.preventDefault();

    const productId = document.getElementById('modalProductId').value;
    const name = document.getElementById('customerName').value.trim();
    const contact = document.getElementById('customerContact').value.trim();
    const address = document.getElementById('customerAddress').value.trim();
    const quantity = parseInt(document.getElementById('orderQuantity').value);
    const pricePerItem = parseFloat(document.getElementById('modalProductPrice').textContent);
    const totalPrice = quantity * pricePerItem;

    if (!name || !contact || !address || quantity < 1) {
      alert('Please fill all fields correctly.');
      return;
    }

   
    alert(`Order placed successfully!\n
Product: ${document.getElementById('modalProductName').textContent}
Quantity: ${quantity}
Total Price: ‚Çπ${totalPrice.toFixed(2)}
\nThank you, ${name}!`);

    closeModal();
  }


  window.onclick = function(event) {
    const modal = document.getElementById('buyNowModal');
    if (event.target === modal) {
      closeModal();
    }
  };

 
  document.addEventListener('click', function(event) {
    if (event.target.classList.contains('btn-remove')) {
      const id = event.target.getAttribute('data-id');
      if (confirm('Are you sure you want to remove this item from the cart?')) {
       
        const cartItem = document.querySelector(`.cart-item[data-id="${id}"]`);
        if (cartItem) {
          cartItem.remove();
          updateGrandTotal();
          if(document.querySelectorAll('.cart-item').length === 0) {
            document.getElementById('cartContainer').innerHTML = '<div class="empty-message">üõí Your cart is empty.</div>';
          }
        }
      }
    }
  });

  
  function updateGrandTotal() {
    let grandTotal = 0;
    document.querySelectorAll('.cart-item').forEach(item => {
      const priceText = item.querySelector('.item-details p:nth-child(3)').textContent; 
      const price = parseFloat(priceText.replace(/[^\d.]/g, ''));
      grandTotal += price;
    });
    const totalElem = document.getElementById('grandTotal');
    if (totalElem) {
      totalElem.textContent = `Grand Total: ‚Çπ${grandTotal.toFixed(2)}`;
    }
  }
</script>
</body>
</html>


